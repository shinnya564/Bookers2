
<%= render partial: 'layouts/sidebar', locals: { book:@book} %>


  <table>
    Book detail
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="2"></th>
        </tr>
      </thead>

    <tbody>
        <tr>
          <td><%= attachment_image_tag @user, :caption, size:10*5, fallback: "no_image.jpg" %></td>
          <td><%= @books.title %></td>
          <td><%= @books.body %></td>
          <% if current_user.id == @user.id %>
            <td><%= link_to 'Edit', "/books/#{@books.id}/edit" %></td>
            <td><%= link_to 'Destroy',book_path(@books), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><br></td>
        </tr>
        <% else %>
      <% end %>
    </tbody>
  </table>