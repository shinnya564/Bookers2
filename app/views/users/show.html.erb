
  <%= render "layouts/cheak" %>
  <%= render partial: 'layouts/sidebar', locals: { book:@book} %>

<div class='row'>
  <div class='col-xs-4'>
        <table class='table'>
          <h2>Books</h2>
        	<thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
	        	<% @user.books.each do |list| %>
    	      		<tr>
                  <td><%= attachment_image_tag @user, :caption, size:10*5, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
	        	    	<td>
                    <%= link_to(book_path(list.id)) do %>
                      <%= list.title %>
                    <% end %>
                  </td>
	            		<td><%= list.body %></td>
		          	</tr>
	        	<% end %>
	        </tbody>
        </table>
      </div>
    </div>
